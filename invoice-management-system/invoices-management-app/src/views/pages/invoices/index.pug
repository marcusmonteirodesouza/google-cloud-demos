extends ../../layouts/layout.pug

block content
  h1 Invoices
  ul
    li
      a(href="/") Back
  table
    thead
      tr
        th Vendor
        th Invoice ID
        th Date
        th Due Date
        th Total Amount
        th Status
    tbody
      each invoice in invoices
        tr
          td=invoice.vendorName
          td
            a(href=`/invoices/${invoice.id}`)=invoice.vendorInvoiceId
          td=invoice.date ? invoice.date.toISOString().slice(0, 10) : invoice.date
          td=invoice.dueDate ? invoice.dueDate.toISOString().slice(0, 10) : invoice.dueDate
          td #{invoice.currency} #{invoice.totalAmount}
          td=invoice.status